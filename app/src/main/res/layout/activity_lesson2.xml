<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lesson2Activity">

    <ImageView
        android:id="@+id/pepebackground2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pepe_teaching_background"
        android:scaleType="fitXY"/>

    <com.quentin.is3261.pepeteacheskotlin.TypeWriter
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pepebackground2"
        android:layout_alignStart="@+id/pepebackground2"
        android:layout_centerVertical="false"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Testing lesson"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fdfcfc" />

</RelativeLayout>