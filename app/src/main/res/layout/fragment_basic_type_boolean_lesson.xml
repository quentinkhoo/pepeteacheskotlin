<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BasicTypeBooleanLessonFragment">

    <TextView
        android:id="@+id/booleanLesson1Text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:textSize="12sp"
        android:textColor="#fdfcfc"
        android:text="@string/chapter1_lesson_boolean_part1" />

    <ImageView
        android:id="@+id/booleanLesson1Image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:src="@drawable/boolean_lesson1" />

    <TextView
        android:id="@+id/booleanLesson2Text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="#fdfcfc"
        android:text="@string/chapter1_lesson_boolean_part2" />

    <ImageView
        android:id="@+id/booleanLesson2Image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitStart"
        android:src="@drawable/boolean_lesson2" />

</LinearLayout>